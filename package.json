{
  "name": "code-suggestions",
  "publisher": "Ig",
  "displayName": "code-suggestions",
  "description": "suggestions for code",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Code Suggestions",
      "properties": {
        "codeSuggestions.serverUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL of the AI completion backend server."
        },
        "codeSuggestions.debugMode": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeSuggestionsExplorer",
          "title": "Code Suggestions",
          "icon": "media/icon.svg" 
        }
      ]
    },
    "views": {
      "codeSuggestionsExplorer": [
        {
          "id": "codeSuggestions.contextView",
          "name": "Context Files",
          "contextualTitle": "Context Files"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "codeSuggestions.removeContextFile",
          "when": "view == codeSuggestions.contextView",
          "group": "inline"
        }
      ]
    },
    "commands": [
            {
                "command": "codeSuggestions.triggerSuggestion",
                "title": "Code Suggestions: Get AI Suggestion"
            },
            {
                "command": "codeSuggestions.removeContextFile",
                "title": "Code Suggestions: Remove Context File"
            }
        ],
        "keybindings": [
            {            
                "command": "runCommands",
                "key": "alt+.", 
                "when": "editorTextFocus",
                "args": {
                    "commands": [                    
                        "hideSuggestWidget", 
                                            
                        "codeSuggestions.triggerSuggestion"
                    ]
                }
            }
        ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
